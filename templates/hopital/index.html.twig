{% extends 'base.html.twig' %}

{% block title %}Hopital{% endblock %}

{% block body %}
    <h1 style="color: #333; font-size: 24px; font-weight: bold; text-align: center; margin-top: 20px;">Hopital</h1>

    <div style="display: flex; flex-wrap: wrap;">
        {% for hopital in hopitals %}
            <div class="hopital-block" style="margin-left: 80px;margin-right: 50px; margin-bottom: 20px; border: 10px solid #ccc; padding: 15px; border-radius: 5px;">
                <div style="display: flex; align-items: center;">
                    {% if hopital.imageFile %}
                        <img src="{{ asset('uploads/images/hopitals' ~ hopital.imageName) }}" alt="{{ hopital.nom }}" style="width: 100px; height: 100px; border-radius: 50%;">
                    {% else %}
                        <div style="width: 100px; height: 100px; background-color: #f0f0f0; border-radius: 50%;"></div>
                    {% endif %}
                    <div style="margin-left: 50px;">
                        <h3>{{ hopital.nom }}</h3>
                        <p><strong>Adresse:</strong> {{ hopital.adresse }}</p>
                        <p><strong>Ville:</strong> {{ hopital.ville }}</p>
                        <p><strong>Nbr Chambre:</strong> {{ hopital.nbrChambre }}</p>
                        <p><strong>Num Tel:</strong> {{ hopital.numTel }}</p>
                        <!-- Button for reservation -->
                        <a href="{{ path('app_reservation_new', {'hopitalId': hopital.id}) }}" class="btn btn-primary" style="background-color: #ff6600; color: #ffffff; border: none; padding: 10px 20px; border-radius: 5px; text-decoration: none;">RÃ©server</a>               
                        
                     </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
